<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|right"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/world_map" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/spacing_mlarge"
                            android:paddingRight="@dimen/spacing_mlarge">

                            <ImageView
                                android:id="@+id/card_logo"
                                android:layout_width="50dp"
                                android:layout_height="26dp"
                                android:layout_gravity="end|right"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_visa"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/card_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:fontFamily="monospace"
                                android:text="**** **** **** 2789"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                                android:textColor="@android:color/white" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_mlarge" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="EXPIRE"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                                android:textColor="@color/grey_10" />

                                            <TextView
                                                android:id="@+id/card_expire"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="monospace"
                                                android:text="**/**"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                                android:textColor="@android:color/white" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="@dimen/spacing_xlarge"
                                            android:layout_height="0dp" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/cvv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="CVV"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                                android:textColor="@color/grey_10" />

                                            <TextView
                                                android:id="@+id/card_cvv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="monospace"
                                                android:text="***"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                                android:textColor="@android:color/white" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/spacing_large" />

                                    <TextView
                                        android:id="@+id/payer_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:text="Basiru Usman"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@android:color/white" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="bottom"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_master_card" />

                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/spacing_medium" />
                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/spacing_large"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:tint="@color/black"
                        android:layout_width="0.0dip"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:text="Hostel Obtaining Details"
                        android:layout_weight="1.0" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/click"
                android:layout_marginTop="@dimen/spacing_large"
                android:elevation="@dimen/spacing_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/st_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:src="@drawable/logo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/spacing_middle">

                        <TextView
                            android:id="@+id/st_matric"
                            android:layout_width="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:text="People Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_90" />

                        <TextView
                            android:id="@+id/st_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:fontFamily="sans-serif-condensed"
                            android:maxLines="3"
                            android:text="sskkkkkkk"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/grey_60" />


                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/grey_10" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/spacing_large"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="0.0dip"
                        android:tint="@color/black"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:layout_weight="1.0" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/grey_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/spacing_large"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Number"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="center"
                    android:textSize="@dimen/spacing_large"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    boxStrokeWidth="1dp"
                    android:textSize="14dp"
                    app:passwordToggleEnabled="true"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/card_numbers"
                        android:padding="@dimen/spacing_middle"
                        android:inputType="textPassword"
                        android:textSize="14dp"
                        android:tooltipText="Enter your Card Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/spacing_large">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="Date"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:textSize="@dimen/spacing_large"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                boxStrokeWidth="1dp"
                                android:textSize="14dp"
                                app:passwordToggleEnabled="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Year ">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/card_year"
                                    android:padding="@dimen/spacing_large"
                                    android:inputType="date"
                                    android:textSize="14dp"
                                    android:tooltipText="MMYY"
                                    android:maxLines="4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="CVV"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:textSize="@dimen/spacing_large"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                boxStrokeWidth="1dp"
                                android:textSize="14dp"
                                app:passwordToggleEnabled="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="CVV">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/cvvv"
                                    android:padding="@dimen/spacing_middle"
                                    android:inputType="textPassword"
                                    android:textSize="14dp"
                                    android:tooltipText="Enter your CVV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="match_parent"
                        android:text="Proceed"
                        android:id="@+id/payment"
                        android:padding="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>